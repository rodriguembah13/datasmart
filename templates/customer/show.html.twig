{% extends 'base.html.twig' %}
{% block page_title %} Customer {% endblock %}
{% block page_subtitle %} Details {% endblock %}
{% block page_content %}
    <div class="">
        <ul class="nav nav-tabs" id="custom-tabs-one-tab" role="tablist">
            <li class="nav-item active">
                <a class="nav-link active" id="custom-tabs-one-home-tab" data-toggle="pill" href="#custom-tabs-information" role="tab" aria-controls="custom-tabs-one-home" aria-selected="true">Informations</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="custom-tabs-one-profile-tab" data-toggle="pill" href="#custom-tabs-stategie" role="tab" aria-controls="custom-tabs-one-profile" aria-selected="false">Strategie Digitale</a>
            </li>
        </ul>
        <div class="tab-content">
                <div class="tab-pane active" id="custom-tabs-information">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ customer.id }}</td>
                        </tr>
                        <tr>
                            <th>Date_from</th>
                            <td>{{ customer.dateFrom ? customer.dateFrom|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Date_to</th>
                            <td>{{ customer.dateTo ? customer.dateTo|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ customer.name }}</td>
                        </tr>
                        <tr>
                            <th>Value</th>
                            <td>{{ customer.value }}</td>
                        </tr>
                        <tr>
                            <th>Visible</th>
                            <td>{{ customer.visible ? 'Yes' : 'No' }}</td>
                        </tr>
                        <tr>
                            <th>RegisteredAt</th>
                            <td>{{ customer.registeredAt ? customer.registeredAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            <div class="tab-pane active" id="custom-tabs-stategie">

            </div>
        </div>
    </div>
<br>

    <a class="btn btn-warning" href="{{ path('customer_index') }}"><i class="fa fa-arrow-left"></i>back</a>
{% endblock %}
