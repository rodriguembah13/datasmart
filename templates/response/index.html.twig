{% extends 'base.html.twig' %}

{% block title %}Response index{% endblock %}

{% block page_content %}
    <h1>Response index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for response in responses %}
            <tr>
                <td>{% for comment in response.comments %}
                <span>{{ comment }}</span>{% endfor %}
                </td>
                <td>{{ response.name }}</td>
                <td>
                    <a href="{{ path('response_show', {'id': response.id}) }}">show</a>
                    <a href="{{ path('response_edit', {'id': response.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
