{% if stepStrategy.step.value=='Définition_des_objectifs_de_base_à_atteindre' %}
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Objectif</th>
            <th>Quantite</th>
            <th>Valeur</th>
            <th>Delai</th>
        </tr>
        </thead>
        <tbody>
        {% for responseStep in stepStrategy.response.responseSteps %}
            <tr>
                <td>{{ responseStep.id }}
                </td>
                <td>{{ responseStep.objectif }}</td>
                <td>{{ responseStep.quantite }}</td>
                <td>{{ responseStep.frequence }}</td>
                <td>{{ responseStep.delai }}</td>
                <td>
                    <a class="btn btn-danger" data-toggle="modal" data-target="#modal-delete" onclick='getId({{ responseStep.id }})' href="#"><i class="fa fa-trash-alt"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endif %}
{% if stepStrategy.step.value=='Identification_de_la_cible_principale_ou_du_client_idéal' %}
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Question</th>
            <th>Answer</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for responseStep in response.responseSteps %}
            <tr>
                <td>{{ responseStep.id }}
                </td>
                <td>{{ response.question }}</td>
                <td>{{ response.answer }}</td>
                <td>
                    <a href="{{ path('response_show', {'id': responseStep.id}) }}">show</a>
                    <a href="{{ path('response_edit', {'id': responseStep.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endif %}
<div id="modal-delete1" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modal-delete" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <h4>Vous voulez supprimer</h4>
                <p>produit</p>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-secondary">
                    <span class="btn-label">cancel</span>
                </button>

                <button type="button" data-dismiss="modal" class="btn btn-danger" id="modal-delete-button">
                    <i class="fa fa-trash-alt"></i>
                    <span class="btn-label">Delete</span>
                </button>

            </div>
        </div>
    </div>
</div>