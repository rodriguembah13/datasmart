        </div>
        <!-- Default to the left -->
        <strong>Copyright &copy; 2020<a href="#">SMART-OPTION</a>.</strong> All rights reserved.
    </footer>
{% endblock %}
{% block javascripts %}
  {# {{ parent() }}#}
