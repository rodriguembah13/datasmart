{% extends 'base.html.twig' %}
{% block title %}Step Strategy index{% endblock %}
{% block page_title %} Step {% endblock %}
{% block page_subtitle %} list {% endblock %}
{% block page_content %}
<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
    </div>
    <div class="col-md-3">
        <div class="btn-group pull-right">
          {#  <a class="btn btn-success btn-sm" href="{{ path('customer_new') }}" data-toggle="tooltip" data-placement="top" title="create customer"><i class="fa fa-plus"></i></a>
            <a  class="btn btn-default btn-sm" href="#"><i class="fa fa-download"></i></a>#}
        </div>
    </div>
</div>
<br>
{% embed '@AdminLTE/Widgets/box-widget.html.twig' %}
        {% block box_before %}{% endblock %}
        {% block box_body %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Members</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for step_strategy in step_strategies %}
            <tr>
                <td>{{ step_strategy.id }}</td>
                <td>{{ step_strategy.step }}</td>
              <td>{% for member in step_strategy.membersSteps %}
            <span class="label label-default">{{ member.customerUser }}</span>
                  {% endfor %}
              </td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-info btn-sm" href="{{ path('strategy_digital_show', {'id': step_strategy.id}) }}" data-toggle="tooltip" data-placement="top" title="show"><i class="fa fa-eye"></i></a>
                        <a class="btn btn-warning btn-sm" href="{{ path('planning_strategy_new', {'id': step_strategy.id}) }}" data-toggle="tooltip" data-placement="top" title="planning"><i class="fa fa-cogs"></i></a>
                        <a class="btn btn-primary btn-sm" href="{{ path('step_strategy_member', {'id': step_strategy.id}) }}" data-toggle="tooltip" data-placement="top" title="assign"><i class="fa fa-user-plus"></i></a>
                    </div>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        {% endblock %}
    {% block box_footer %}

    {% endblock %}

    {% block box_after %}{% endblock %}
{% endembed %}
{% endblock %}
