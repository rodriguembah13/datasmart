{% extends 'base.html.twig' %}
{% block title %}implementation {% endblock %}
{% block page_title %} implementation {% endblock %}
{% block page_subtitle %} {{ avatar.implementation }} {% endblock %}
{% block page_content %}
    <a style="margin-bottom: 10px" class="btn btn-warning" href="{{ path('strategy_digital_show', {'id': avatar.implementation.stepStrategy.strategy.id}) }}" data-toggle="tooltip" data-placement="top" title="Back customer"><i class="fa fa-arrow-left"></i></a>
    <br>
    {% embed '@AdminLTE/Widgets/box-widget.html.twig'   with {
        'boxtype' : 'success',
        'solid' : 0,
        'collapsible' : 'widget-box.collapse'|trans ~ '... ',
    }%}
        {% block box_before %}{% endblock %}
        {% block box_body %}
            {{ form_start(form) }}
            {{ form_widget(form) }}

            {{ form_end(form) }}
            <div class="pull-right">
            <button type="reset" class="btn btn-warning "><i class="fa fa-times"></i> {{ 'Cancel'|trans }}</button>
            <button type="button" class="btn btn-primary " id="sumbitAvatar"><i
                        class="fa fa-save"></i> {{ button_label|default('Save') }}</button>
        </div>
        {% endblock %}

    {% endembed %}<span id="id_step" class="hidden">{{ avatar.id }}</span>
    {% embed '@AdminLTE/Widgets/box-widget.html.twig'   with {
        'boxtype' : 'success',
        'solid' : 0,
        'collapsible' : 'widget-box.collapse'|trans ~ '... ',
    }%}
        {% block box_before %}{% endblock %}
        {% block box_body %}
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Question</th>
                    <th>Answer</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for cible in cibles %}
                    <tr>
                        <td>{{ cible.id }}</td>
                        <td>{{ cible.question}}</td>
                        <td>{{ cible.answer}}</td>
                        <td>
                            <a class="btn btn-danger" href="#" onclick="getCibleId({{ cible.id }})" data-toggle="modal" data-target="#modal-delete"
                            ><i class="fa fa-trash-alt"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endblock %}
    {% endembed %}
    <div id="modal-delete" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modal-delete" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <h4>Are you sure you want to delete this item?</h4>

                    <input id="cible_id" class="hidden">
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn btn-secondary">
                        <span class="btn-label">cancel</span>
                    </button>

                    <button type="button" data-dismiss="modal" class="btn btn-danger" id="modal-delete-avatar-button">
                        <i class="fa fa-trash-alt"></i>
                        <span class="btn-label">Delete</span>
                    </button>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        function getd(id) {
            alert(id)
        }
    </script>
    {% include 'implementation/javascript.html.twig' %}
{% endblock %}