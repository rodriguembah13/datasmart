{% extends 'base.html.twig' %}

{% block title %}StrategyDigital{% endblock %}
{% block page_title %} Strategy {% endblock %}
{% block page_subtitle %} {{strategy_digital}} {% endblock %}
{% block page_content %}
    <br>
{% embed '@AdminLTE/Widgets/box-widget.html.twig' %}
        {% block box_before %}{% endblock %}
    {% block box_title %}Dashboard{% endblock %}
        {% block box_body %}

        {% endblock %}
    {% block box_footer %}

    {% endblock %}

    {% block box_after %}{% endblock %}
{% endembed %}
    {% embed '@AdminLTE/Widgets/box-widget.html.twig' %}
        {% block box_body %}
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for step_strategy in step_strategies %}
                    <tr>
                        <td>{{ step_strategy.id }}</td>
                        <td>{{ step_strategy.step }}</td>
                        <td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-success btn-sm" href="{{ path('implementation_display', {'id': step_strategy.id}) }}" data-toggle="tooltip" data-placement="top" title="Implementation"><i class="fa fa-edit"></i></a>
                                <a class="btn btn-info btn-sm" href="{{ path('documentaire_read', {'id': step_strategy.id}) }}" data-toggle="tooltip" data-placement="top" title="Documentaire"><i class="fa fa-eye"></i></a>
                                <a class="btn btn-primary btn-sm" href="{{ path('implementation_display_vew', {'id': step_strategy.id}) }}" data-toggle="tooltip" data-placement="top" title="Visualisation"><i class="fa fa-eye-slash"></i></a>
                            </div>
                        </td>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endblock %}
    {% endembed %}
{% endblock %}
