{% extends 'base.html.twig' %}

{% block title %}Employee{% endblock %}

{% block body %}
    <h1>Employee</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ employee.id }}</td>
            </tr>
            <tr>
                <th>IsCoach</th>
                <td>{{ employee.isCoach ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ employee.name }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ employee.value }}</td>
            </tr>
            <tr>
                <th>Visible</th>
                <td>{{ employee.visible ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>RegisteredAt</th>
                <td>{{ employee.registeredAt ? employee.registeredAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('employee_index') }}">back to list</a>

    <a href="{{ path('employee_edit', {'id': employee.id}) }}">edit</a>

    {{ include('employee/_delete_form.html.twig') }}
{% endblock %}
