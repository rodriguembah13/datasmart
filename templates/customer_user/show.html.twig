{% extends 'base.html.twig' %}

{% block title %}CustomerUser{% endblock %}

{% block body %}
    <h1>CustomerUser</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer_user.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ customer_user.name }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ customer_user.value }}</td>
            </tr>
            <tr>
                <th>Visible</th>
                <td>{{ customer_user.visible ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>RegisteredAt</th>
                <td>{{ customer_user.registeredAt ? customer_user.registeredAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('customer_user_index') }}">back to list</a>

    <a href="{{ path('customer_user_edit', {'id': customer_user.id}) }}">edit</a>

    {{ include('customer_user/_delete_form.html.twig') }}
{% endblock %}
